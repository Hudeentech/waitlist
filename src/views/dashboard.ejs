<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '#52AF44',
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex">
      <!-- Sidebar for desktop -->
      <div class="hidden md:flex md:flex-col md:w-64 md:fixed md:inset-y-0 bg-gradient-to-b from-[#52AF44] to-green-800">
        <div class="flex items-center justify-start h-16 px-4">
            <img class="w-[100px]" src="/images/logo.png" alt="img">
        </div>
        <div class="flex-1 flex flex-col overflow-y-auto">
          <nav class="flex-1 px-4 py-4 space-y-2">
            <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-white bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
              <i class="fas fa-chart-line w-6"></i>
              <span class="ml-3">Dashboard</span>
            </a>
            <a href="/admin/emails" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-users w-6"></i>
              <span class="ml-3">Subscribers</span>
            </a>
            <a href="/admin/send" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-paper-plane w-6"></i>
              <span class="ml-3">Send Message</span>
            </a>
          </nav>
          <div class="px-4 py-4">
            <a href="/admin/logout" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-sign-out-alt w-6"></i>
              <span class="ml-3">Logout</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile header -->
      <div class="md:hidden bg-primary fixed w-full top-0 z-10">
        <div class="px-4 h-16 flex items-center justify-between">
            <div class="flex items-center justify-start h-16 px-4">
              <img class="w-[100px]" src="/images/logo.png" alt="img">
            </div>
          <button id="menuBtn" class="text-white">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
        <!-- Mobile menu -->
        <div id="mobileMenu" class="hidden bg-primary w-full px-4 py-2">
          <a href="/admin/dashboard" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-chart-line w-6 inline-block"></i>
            <span class="ml-3">Dashboard</span>
          </a>
          <a href="/admin/emails" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-users w-6 inline-block"></i>
            <span class="ml-3">Subscribers</span>
          </a>
          <a href="/admin/send" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-paper-plane w-6 inline-block"></i>
            <span class="ml-3">Send Message</span>
          </a>
          <a href="/admin/logout" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-sign-out-alt w-6 inline-block"></i>
            <span class="ml-3">Logout</span>
          </a>
        </div>
      </div>

      <!-- Main content -->
      <div class="flex-1 md:ml-64">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-16 md:mt-0">
          <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="mb-6 p-4 rounded-md bg-red-50 border border-red-200">
              <div class="flex">
                <i class="fas fa-exclamation-circle text-red-400 mt-0.5"></i>
                <p class="ml-3 text-red-700"><%= error %></p>
              </div>
            </div>
          <% } %>
          
          <% if (typeof message !== 'undefined' && message && message.length > 0) { %>
            <div class="mb-6 p-4 rounded-md bg-green-50 border border-green-200">
              <div class="flex">
                <i class="fas fa-check-circle text-green-400 mt-0.5"></i>
                <p class="ml-3 text-green-700"><%= message %></p>
              </div>
            </div>
          <% } %>
          
          <h1 class="text-2xl font-bold text-gray-900 mb-8">Welcome, <%= user %></h1>
          
          <div class="flex flex-row justify-center gap-4 mb-8 w-full md:w-fit">
            <div class="bg-white rounded-xl shadow-sm p-6 border w-full md:w-fit border-gray-100">
              <div class="flex flex-col md:flex-row justify-center md:gap-4 items-center">
                <div class="p-3 rounded-full bg-green-100 text-primary">
                  <i class="fas fa-users text-xl"></i>
                </div>
                <div class="pt-2">
                  <p class="text-2xl text-center md:text-left font-bold text-gray-900"><%= total %></p>
                  <p class="text-xs md:text-sm py-2 text-center md:text-left font-medium text-gray-500">Total Subscribers</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm p-6 w-full md:w-fit  border border-gray-100">
              <div class="flex flex-col md:flex-row justify-center w-full md:w-fit md:gap-4 items-center">
                <div class="py-3 px-4 rounded-full bg-green-100 text-primary">
                  <i class="fas fa-bell text-xl"></i>
                </div>
                <div class="pt-2">
                  <p class="text-2xl text-center md:text-left font-bold text-gray-900"><%= notified %></p>
                  <p class="text-xs md:text-sm py-2 text-center md:text-left font-medium text-gray-500">Notified Subscribers</p>
                </div>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <a href="/admin/emails" class="group">
              <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100 transition-all duration-200 hover:shadow-md">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="py-3 px-4  rounded-full bg-green-100 text-primary inline-flex">
                      <i class="fas fa-list text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold mt-4 text-gray-900">View All Subscribers</h3>
                    <p class="text-gray-500 mt-2">Access the complete list of subscribers</p>
                  </div>
                  <i class="fas fa-arrow-right text-primary opacity-0 group-hover:opacity-100 transition-opacity"></i>
                </div>
              </div>
            </a>

            <a href="/admin/send" class="group">
              <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-100 transition-all duration-200 hover:shadow-md">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="py-3 px-4 rounded-full bg-green-100 text-primary inline-flex">
                      <i class="fas fa-paper-plane text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold mt-4 text-gray-900">Send Message</h3>
                    <p class="text-gray-500 mt-2">Send updates to all subscribers</p>
                  </div>
                  <i class="fas fa-arrow-right text-primary opacity-0 group-hover:opacity-100 transition-opacity"></i>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('menuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
