<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Send Message</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#52AF44',
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50">
<div class="min-h-screen flex">

    <!-- Sidebar for desktop -->
    <div class="hidden md:flex md:flex-col md:w-64 md:fixed md:inset-y-0 bg-gradient-to-b from-[#52AF44] to-green-800">
        <div class="flex items-center justify-start h-16 px-4">
            <img class="w-[100px]" src="/images/logo.png" alt="img">
        </div>

        <div class="flex-1 flex flex-col overflow-y-auto">
            <nav class="flex-1 px-4 py-4 space-y-2">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
                    <i class="fas fa-chart-line w-6"></i>
                    <span class="ml-3">Dashboard</span>
                </a>

                <a href="/admin/emails" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
                    <i class="fas fa-users w-6"></i>
                    <span class="ml-3">Subscribers</span>
                </a>

                <a href="/admin/send" class="flex items-center px-4 py-3 text-white bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
                    <i class="fas fa-paper-plane w-6"></i>
                    <span class="ml-3">Send Message</span>
                </a>
            </nav>

            <div class="px-4 py-4">
                <a href="/admin/logout" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
                    <i class="fas fa-sign-out-alt w-6"></i>
                    <span class="ml-3">Logout</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Mobile header -->
    <div class="md:hidden bg-primary fixed w-full top-0 z-10">
        <div class="px-4 h-16 flex items-center justify-between">
             <div class="flex items-center justify-start h-16 px-4">
              <img class="w-[100px]" src="/images/logo.png" alt="img">
            </div>
            
            <button id="menuBtn" class="text-white">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>

        <!-- Mobile menu -->
        <div id="mobileMenu" class="hidden bg-primary w-full px-4 py-2">
            <a href="/admin/dashboard" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
                <i class="fas fa-chart-line w-6 inline-block"></i>
                <span class="ml-3">Dashboard</span>
            </a>

            <a href="/admin/emails" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
                <i class="fas fa-users w-6 inline-block"></i>
                <span class="ml-3">Subscribers</span>
            </a>

            <a href="/admin/send" class="block px-4 py-3 text-white bg-white/10 rounded-lg hover:bg-white/20">
                <i class="fas fa-paper-plane w-6 inline-block"></i>
                <span class="ml-3">Send Message</span>
            </a>

            <a href="/admin/logout" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
                <i class="fas fa-sign-out-alt w-6 inline-block"></i>
                <span class="ml-3">Logout</span>
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="flex-1 md:ml-64">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-16 md:mt-0">

            <div class="md:flex md:items-center md:justify-between mb-8">
                <h1 class="text-2xl font-bold text-gray-900">Send Message to Subscribers</h1>

                <div class="mt-4 md:mt-0">
                    <a href="/admin/emails" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        <i class="fas fa-users -ml-1 mr-2"></i>
                        View Subscribers
                    </a>
                </div>
            </div>

            <div class="bg-white shadow-sm rounded-lg border border-gray-100 p-6">

                <!-- Success Message -->
                <% if (typeof message !== "undefined" && message.length) { %>
                <div class="mb-6 p-4 rounded-md bg-green-50 border border-green-200">
                    <div class="flex">
                        <i class="fas fa-check-circle text-green-400 mt-0.5"></i>
                        <p class="ml-3 text-green-700"><%= message %></p>
                    </div>
                </div>
                <% } %>

                <!-- Error Message -->
                <% if (typeof error !== "undefined" && error.length) { %>
                <div class="mb-6 p-4 rounded-md bg-red-50 border border-red-200">
                    <div class="flex">
                        <i class="fas fa-exclamation-circle text-red-400 mt-0.5"></i>
                        <p class="ml-3 text-red-700"><%= error %></p>
                    </div>
                </div>
                <% } %>

                <form method="post" action="/admin/send" class="space-y-6">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                        <input name="subject" placeholder="heading title" class="block border w-full py-3 px-4 rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Body (HTML)</label>
                        <textarea name="body" rows="8" placeholder="your message here or paste html email template" class="block border w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm"></textarea>
                    </div>

                    <div >
                        <label class="block text-sm font-medium text-gray-700 mb-1">Target</label>
                        <select name="target" class="block w-full border py-3 px-4 rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                            <option value="all">All subscribers</option>
                            <option value="unnotified">Only unnotified</option>
                            <option value="custom">Custom (comma separated)</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Custom emails (comma separated)</label>
                        <input name="customEmails" class="block w-full py-3 px-6 border rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" />
                    </div>

                    <div class="flex items-center space-x-4">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary/90">
                            <i class="fas fa-paper-plane -ml-1 mr-2"></i>
                            Send Message
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

<script>
    // Mobile menu toggle
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');

    menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });
</script>

</body>
</html>
