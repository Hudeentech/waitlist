<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Subscribers</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '#52AF44',
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex">
      <!-- Sidebar for desktop -->
      <div class="hidden md:flex md:flex-col md:w-64 md:fixed md:inset-y-0 bg-primary">
        <div class="flex items-center justify-center h-16 px-4">
          <span class="text-white text-xl font-bold">Waitlist Admin</span>
        </div>
        <div class="flex-1 flex flex-col overflow-y-auto">
          <nav class="flex-1 px-4 py-4 space-y-2">
            <a href="/admin/dashboard" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-chart-line w-6"></i>
              <span class="ml-3">Dashboard</span>
            </a>
            <a href="/admin/emails" class="flex items-center px-4 py-3 text-white bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
              <i class="fas fa-users w-6"></i>
              <span class="ml-3">Subscribers</span>
            </a>
            <a href="/admin/send" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-paper-plane w-6"></i>
              <span class="ml-3">Send Message</span>
            </a>
          </nav>
          <div class="px-4 py-4">
            <a href="/admin/logout" class="flex items-center px-4 py-3 text-white rounded-lg hover:bg-white/10 transition-colors">
              <i class="fas fa-sign-out-alt w-6"></i>
              <span class="ml-3">Logout</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile header -->
      <div class="md:hidden bg-primary fixed w-full top-0 z-10">
        <div class="px-4 h-16 flex items-center justify-between">
          <span class="text-white text-xl font-bold">Waitlist Admin</span>
          <button id="menuBtn" class="text-white">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
        <!-- Mobile menu -->
        <div id="mobileMenu" class="hidden bg-primary w-full px-4 py-2">
          <a href="/admin/dashboard" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-chart-line w-6 inline-block"></i>
            <span class="ml-3">Dashboard</span>
          </a>
          <a href="/admin/emails" class="block px-4 py-3 text-white bg-white/10 rounded-lg hover:bg-white/20">
            <i class="fas fa-users w-6 inline-block"></i>
            <span class="ml-3">Subscribers</span>
          </a>
          <a href="/admin/send" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-paper-plane w-6 inline-block"></i>
            <span class="ml-3">Send Message</span>
          </a>
          <a href="/admin/logout" class="block px-4 py-3 text-white hover:bg-white/10 rounded-lg">
            <i class="fas fa-sign-out-alt w-6 inline-block"></i>
            <span class="ml-3">Logout</span>
          </a>
        </div>
      </div>

      <!-- Main content -->
      <div class="flex-1 md:ml-64">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-16 md:mt-0">
          <div class="md:flex md:items-center md:justify-between mb-8">
            <div class="flex-1 min-w-0">
              <h1 class="text-2xl font-bold text-gray-900 truncate">All Subscribers</h1>
              <p class="mt-1 text-sm text-gray-500">Manage your subscriber list and see notification status</p>
            </div>
            <div class="mt-4 flex md:mt-0 md:ml-4">
              <a href="/admin/send" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                <i class="fas fa-paper-plane -ml-1 mr-2"></i>
                Send Message
              </a>
            </div>
          </div>

          <div class="bg-white shadow-sm rounded-lg border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">
                      <div class="flex items-center">
                        <i class="fas fa-envelope text-gray-400 mr-2"></i>
                        Email
                      </div>
                    </th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                      <div class="flex items-center">
                        <i class="fas fa-calendar text-gray-400 mr-2"></i>
                        Joined At
                      </div>
                    </th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                      <div class="flex items-center">
                        <i class="fas fa-bell text-gray-400 mr-2"></i>
                        Notified
                      </div>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                <% emails.forEach(function(e){ %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <%= e.email %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= new Date(e.joinedAt).toLocaleString() %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= e.isNotified ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <i class="<%= e.isNotified ? 'fas fa-check' : 'fas fa-clock' %> mr-1"></i>
                        <%= e.isNotified ? 'Yes' : 'No' %>
                      </span>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('menuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
